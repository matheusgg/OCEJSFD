	</tag>

	<tag>
		<tag-name>submitButton</tag-name>
		<component>
			<component-type>br.com.components.submit.SubmitButton</component-type>
			<renderer-type>br.com.components.submit.SubmitButton</renderer-type>
			<handler-class>br.com.components.submit.SubmitButtonHandler</handler-class>
		</component>
		<attribute>
